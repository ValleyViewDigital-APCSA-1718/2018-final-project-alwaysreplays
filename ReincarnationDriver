        System.out.println("Enter the location of your third desired location to reincarnate ");
        String LR3 = Scan3.nextLine();
        
        
        System.out.println("Enter the year of your first reincarnation ");
        int TR1 = Scan3.nextInt();
        
        System.out.println("Enter the year of your second reincarnation ");
        int TR2 = Scan3.nextInt();
        
        System.out.println("Enter the year of your third reincarnation ");
        int TR3 = Scan3.nextInt();
        
        Reincarnation game3 = new Reincarnation (RW1, RW2, RW3, RW4, RW5, RT1, RT2, RT3, RT4, RL1, RL2, RL3, RL4, RSF1, RSF2, RSF3,LFR1, LFR2, LFR3, WR1, WR2, WR3, TR1, TR2, TR3, LR1, LR2, LR3);
        System.out.println(game3.toString() + "\n" + "\n" + "Congtatulations! " + game3.death());

        
